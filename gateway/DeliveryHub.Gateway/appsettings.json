{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ReverseProxy": {
    "Routes": {
      "pedidos_route": {
        "ClusterId": "pedidos_cluster",
        "Match": {
          "Path": "/pedidos/{**catch-all}"
        }
      },
      "entregas_route": {
        "ClusterId": "entregas_cluster",
        "Match": {
          "Path": "/entregas/{**catch-all}"
        }
      },
      "entregadores_route": {
        "ClusterId": "entregadores_cluster",
        "Match": {
          "Path": "/entregadores/{**catch-all}"
        }
      }
    },

    "Clusters": {
      "pedidos_cluster": {
        "Destinations": {
          "pedidos_api": {
            "Address": "http://pedidos-api:8080/"
          }
        }
      },
      "entregas_cluster": {
        "Destinations": {
          "entregas_api": {
            "Address": "http://entregas-api:8080/"
          }
        }
      },
      "entregadores_cluster": {
        "Destinations": {
          "entregadores_api": {
            "Address": "http://entregadores-api:8080/"
          }
        }
      }
    }
  },

  "AllowedHosts": "*"
}
